<template name="main-nav">
<view class="main-top">
  <view style="width:{{navTitle.navWidth}}" class="{{navTitle.activeIndex == index ? 'nav-active':''}}" bindtap="pageClick" wx:for="{{navTitle.navTitleArr}}" wx:key="*this" data-id="{{index}}">{{navTitle.navTitleArr[index]}}</view>
</view>
</template>

<!--顶部锚标记-->
<template name="topmark">
  <view class="top-mark">
    <input cursor-spacing="10000" disabled="{{invisible}}" bindfocus="hideTop" bindblur="blurTop" focus="{{focusTop}}" bindfocus="focusTop" style="width:100vw;" />
  </view>
</template>

<!--回到顶部锚链接-->
<template name="backToTop">
  <view class="back-to-top">
    <view class="bold-line"></view>
    <view class="toTop" bindtap="tapToTop">
      <image src="/images/1_29.jpg"></image>
      <view>回到顶部</view>
    </view>
  </view>
</template>

