/* pages/order/success.wxss */

.notice-card {
  background: #fff;
  padding: 10px 3vw;
}

/*下单成功提示*/

.notice-title {
  height: 45px;
  text-align: center;
  padding-bottom: 10px;
  border-bottom: 2px solid #949494;
}

.notice-title .icon {
  width: 34px;
  height: 34px;
  margin: 5px;
}

.notice-title .text {
  height: 45px;
  font-size: 24px;
  line-height: 45px;
  display: inline-block;
  vertical-align: top;
}

/*显示订单号*/

.notice-order-number {
  height: 49px;
  color: #2c2c2c;
  font-size: 12px;
  line-height: 45px;
  border-bottom: 1px solid #f5f5f0;
}

.goods-info {
  padding-top: 10px;
}

.goods-info view {
  width: 30vw;
  color: #2c2c2c;
  display: inline-block;
}

.goods-info .name {
  word-break: break-all;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/*显示订单小计*/

.notice-order-total {
  height: 59px;
  color: #2c2c2c;
  font-size: 12px;
  line-height: 45px;
  margin-top: 10px;
  border-top: 1px solid #f5f5f0;
}

.notice-order-total .price {
  font-size: 20px;
  color: #ff4146;
  line-height: 45px;
  display: inline-block;
}

/*温馨提示*/

.notice-warm-tips {
  font-size: 12px;
  line-height: 1.5;
  color: #949494;
}

.keep-shopping {
  color: #2c2c2c;
  font-size: 12px;
  margin-top: 15px;
  text-align: center;
  padding-bottom: 10px;
}

.keep-shopping navigator {
  color: blue;
  font-size: 12px;
  display: inline-block;
  text-decoration: underline;
}
